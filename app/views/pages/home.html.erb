<%= render "shared/banner" %>
<div class="home">
  <center><h2>Appliances in your area</h2></center>

  <div class="cards">

    <% @appliances.shuffle.first(6).each do |appliance| %>
      <%= link_to appliance_path(appliance) do %>
        <div class="card-product">
          <%= cl_image_tag appliance.photos.first.key, alt: "Tool", height: 120, width: 120 %>
          <div class="card-product-infos">
            <h2><%= appliance.title %></h2>
            <p><%= appliance.description %></p>
            <div class="location">
              <p><span><%= appliance.location %></span></p>
            </div>
            <div class="price">
              <div id="pricetag"><%= appliance.price %>,00â‚¬<span>/day</span></div>
            </div>
            <div class="availability">
              <% availability = ['Available', 'Unavailable'].sample %>
              <% if availability == 'Available' %>
                <div id="greendot"><%= availability %></div>
              <% else %>
                <div id="reddot"><%= availability %></div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
