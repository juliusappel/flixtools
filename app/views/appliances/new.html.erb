<div class="row new-appliance">
  <div class="col-4">
    <h2>List your appliance</h2>


<%= simple_form_for(@appliance) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: 'Kärcher - High pressure cleaner'%>
    <%= f.input :description, placeholder: 'Very effective cleaning machine' %>
    <%= f.input :price, placeholder: '5,00€', label: 'Price per day' %>
    <%= f.input :location, placeholder: 'Im Mediapark 5, Cologne', label: 'Address' %>
    <%= f.input :photo, as: :file, label: "Photos" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-flat" %>
  </div>
  <% end %>
  </div>
</div>
